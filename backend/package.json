{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/cluster.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "node dist/cluster.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "lint-ci": "tslint -c tslint.json -e './node_modules/**/*.*' './**/*.ts'",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect=0.0.0.0 dist/server.js",
    "watch-debug": "npm run copy-static-assets; concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "author": "Rodion Abdurakhimov",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.5.0",
    "http-status-codes": "^1.4.0",
    "migrate-mongo": "^7.2.1",
    "mongoose": "^5.9.15",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/concurrently": "^5.2.0",
    "@types/cors": "^2.8.6",
    "@types/eslint": "^6.8.1",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^14.0.5",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.9",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
